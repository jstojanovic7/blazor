@page "/0404aLoopDoubleFactorial"

<PageTitle>Double factorial</PageTitle>
<h1>Double factorial</h1>
<br/>
<table>
    <tr>
        <td>Number:</td>
        <td>
            <input style="text-align:right" @bind="number"/>
        </td>
    </tr>
    
    <tr>
        <td style="text-align:center" colspan="2">
            <button title="double factorial" @onclick="CalculateDoubleFactorial">!!</button> &nbsp; 
        </td>
    </tr>
    <tr>
        <td>@number!! &nbsp;=&nbsp;</td>
        <td><input style="text-align:right" @bind="result"/></td>
    </tr>
 </table> 
<br/>

@code {

    private int number = 5;

    private double result = 1;

    private void CalculateDoubleFactorial()
    {

        int n = number;
        if ( n <= 0)
        {
            result = -1;
            return;
        }
        
        result=1;
        if (n%2 == 0)
        {
            int i=2;
            result=1;
            while (i <= n)
            {
                result *=i;
                i+=2;
            }
        }
        else
        {
            result=1;
            int i=1;
            do
            {
                result *=i;
                i +=2;
            } while(i <= n);
        }
        
    }

    
}
